{
  "manifest_version": 3,
  "name": "Wattpad to Kindle E-reader",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["http://wattpad.com/*", "https://*.wattpad.com/*", "https://www.wattpad.com/*"],
      "js": ["contentScript.bundle.js"]
    },
    {
      "run_at": "document_idle",
      "matches": ["http://wattpad.com/*", "https://*.wattpad.com/*", "https://www.wattpad.com/*"],
      "js": ["importCss.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "icon-128.png", "icon-34.png", "UPGRADE.png", "warning.png"],
      "matches": ["https://www.wattpad.com/*"]
    }
  ],
  "host_permissions": [
    "https://*.xstudio.digital/*"
  ],
  "permissions": [
    "management",
    "storage",
    "tabs"
  ]
}
